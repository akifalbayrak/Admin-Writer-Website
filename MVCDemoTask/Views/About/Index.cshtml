@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-title">
        <h2>Hakkımda Veri Listesi</h2>  
    </div>
    <div class="card-body">
        <table class="table table-bordered>
            <tr>
                <th>#</th>
                <th>Hakkımda Başlığı</th>
                <th>Aktif Yap</th>
                <th>Pasif Yap</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AboutId</td>
                    <td>@item.AboutDetails1</td>
                    <td>@item.AboutImage1</td>
                    <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
                    <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
                </tr>
            }
        </table>



        @Html.Action("AboutPartial", "About")
    </div>

</div>
